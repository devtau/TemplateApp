<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.view.DetailsFragment">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.devtau.template.presentation.viewmodels.DetailsViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onRefresh="@{viewModel}"
            app:refreshing="@{viewModel.progress}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?colorOnPrimary">

                <include layout="@layout/fragment_details_content"
                    android:id="@+id/content" />
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarTheme"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleMarginBottom="@dimen/margin_normal"
                app:expandedTitleMarginStart="@dimen/margin_normal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:contentScrim="?colorPrimary"
                app:scrimAnimationDuration="@android:integer/config_shortAnimTime"
                tools:title="Some fc title">

                <ImageView
                    app:srcCompat="@drawable/il_arena"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/expanded_toolbar_height"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="@dimen/margin_quoter"
                    app:layout_collapseMode="pin"
                    app:titleMarginEnd="60dp"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:visibility="@{viewModel.apple.isIconUrlEmpty() ? View.GONE : View.VISIBLE}"
                    app:rectImage="@{viewModel.apple.iconUrl}"
                    app:layout_collapseMode="pin"
                    tools:background="@color/purple_200"
                    android:layout_gravity="end"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>